{
  "watch": ["src", ".env"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules", "dist"],
  "exec": "tsx src/index.ts",
  "delay": "2000",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "events": {
    "restart": "echo 'Restarting due to changes...'"
  }
}
