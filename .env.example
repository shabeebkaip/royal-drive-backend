# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/royal-drive-dev
MONGODB_TEST_URI=mongodb://localhost:27017/royal-drive-test

# JWT Configuration
# Generate a secure JWT secret using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# IMPORTANT: Use different secrets for development, staging, and production!
JWT_SECRET=REPLACE_WITH_SECURE_32_CHAR_MINIMUM_SECRET_FROM_CRYPTO_RANDOM_BYTES
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
