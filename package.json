{
  "name": "royal-drive-backend",
  "version": "1.0.0",
  "description": "Modern Node.js backend starter pack with TypeScript and clean architecture",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "dev:tsx": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.12",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "tsx": "^4.16.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "vitest": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.4"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mongodb",
    "rest-api",
    "starter-pack",
    "clean-architecture"
  ],
  "author": "Shabeeb",
  "license": "MIT"
}
